<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" styleClass="background" stylesheets="@../Style/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Wargames.controller.battleController">
   <center>
      <StackPane fx:id="background" alignment="BOTTOM_CENTER" minHeight="200.0" minWidth="200.0"
                 BorderPane.alignment="BOTTOM_CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0"/>
         </BorderPane.margin>
         <VBox alignment="TOP_CENTER" spacing="20.0" StackPane.alignment="BOTTOM_CENTER">
            <HBox alignment="CENTER" VBox.vgrow="NEVER">
               <Label fx:id="title" styleClass="title" stylesheets="@../Style/style.css" text="Wargames">
                  <font>
                     <Font size="25.0"/>
                  </font>
               </Label>
            </HBox>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="TOP_CENTER" styleClass="size20" VBox.vgrow="NEVER">
                           <children>
                              <Label fx:id="armyName1" HBox.hgrow="NEVER"/>
                           </children>
                        </HBox>
                        <TableView fx:id="tableView1" styleClass="table" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="typeCol1" editable="false" prefWidth="75.0" sortable="false"
                                           styleClass="table" text="Type"/>
                              <TableColumn fx:id="nameCol1" editable="false" prefWidth="75.0" sortable="false"
                                           styleClass="table" text="Name"/>
                              <TableColumn fx:id="healthCol1" editable="false" prefWidth="75.0" sortable="false"
                                           styleClass="table" text="Health"/>
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                           </columnResizePolicy>
                           <VBox.margin>
                              <Insets/>
                           </VBox.margin>
                        </TableView>
                     </children>
                     <HBox.margin>
                        <Insets left="20.0"/>
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER" maxWidth="250.0" minWidth="200.0" prefWidth="200.0" spacing="10.0"
                        styleClass="textBackground" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="startBattleBtn" mnemonicParsing="false" onAction="#startBattleBtnClicked"
                                styleClass="size15" text="Start Battle" VBox.vgrow="ALWAYS"/>
                        <VBox alignment="CENTER" spacing="20.0" styleClass="size12" VBox.vgrow="NEVER">
                           <children>
                              <Label fx:id="battleStatus" alignment="CENTER" textAlignment="CENTER"
                                     textOverrun="CLIP" wrapText="true"/>
                              <Label fx:id="attackInfo" contentDisplay="CENTER" textAlignment="CENTER"
                                     wrapText="true"/>
                              <Label fx:id="damageDealtText" contentDisplay="CENTER" textAlignment="CENTER"
                                     wrapText="true"/>
                           </children>
                           <VBox.margin>
                              <Insets/>
                           </VBox.margin>
                        </VBox>
                        <Button fx:id="battleSpeedBtn" mnemonicParsing="false" onAction="#battleSpeedBtnClicked"
                                styleClass="size15" text="Normal Speed" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets/>
                           </VBox.margin>
                        </Button>
                        <Button fx:id="restartBtn" mnemonicParsing="false" onAction="#restartBtnClicked"
                                styleClass="size15" text="Restart battle" VBox.vgrow="ALWAYS"/>
                        <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backBtnClicked"
                                styleClass="size15" text="Back To Menu"/>
                     </children>
                     <opaqueInsets>
                        <Insets/>
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets/>
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="TOP_CENTER" styleClass="size20">
                           <children>
                              <Label fx:id="armyName2" HBox.hgrow="NEVER"/>
                           </children>
                        </HBox>
                        <TableView fx:id="tableView2" styleClass="table" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="typeCol2" editable="false" prefWidth="75.0" sortable="false"
                                           styleClass="table" text="Type"/>
                              <TableColumn fx:id="nameCol2" editable="false" prefWidth="75.0" sortable="false"
                                           styleClass="table" text="Name"/>
                              <TableColumn fx:id="healthCol2" editable="false" prefWidth="75.0" sortable="false"
                                           styleClass="table" text="Health"/>
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                           </columnResizePolicy>
                           <VBox.margin>
                              <Insets/>
                           </VBox.margin>
                        </TableView>
                     </children>
                     <HBox.margin>
                        <Insets right="20.0"/>
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <Pane VBox.vgrow="ALWAYS"/>
            <HBox>
               <children>
                  <HBox fx:id="healthBar1" alignment="CENTER_LEFT" maxWidth="200.0" minHeight="20.0"
                        minWidth="200.0">
                     <HBox.margin>
                        <Insets left="20.0"/>
                     </HBox.margin>
                  </HBox>
                  <Pane minHeight="20.0" HBox.hgrow="ALWAYS"/>
                  <HBox fx:id="healthBar2" alignment="CENTER_LEFT" maxWidth="200.0" minHeight="20.0"
                        minWidth="200.0">
                     <HBox.margin>
                        <Insets right="20.0"/>
                     </HBox.margin>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets/>
               </VBox.margin>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" maxHeight="200.0" spacing="20.0">
               <VBox.margin>
                  <Insets/>
               </VBox.margin>
               <children>
                  <HBox alignment="BOTTOM_CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Pane fx:id="commander1" HBox.hgrow="ALWAYS"/>
                        <Pane fx:id="cavalry1" HBox.hgrow="ALWAYS"/>
                        <Pane fx:id="ranged1" HBox.hgrow="ALWAYS"/>
                        <Pane fx:id="infantry1" HBox.hgrow="ALWAYS"/>
                     </children>
                  </HBox>
                  <HBox alignment="BOTTOM_CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Pane fx:id="infantry2" HBox.hgrow="ALWAYS"/>
                        <Pane fx:id="ranged2" HBox.hgrow="ALWAYS"/>
                        <Pane fx:id="cavalry2" HBox.hgrow="ALWAYS"/>
                        <Pane fx:id="commander2" HBox.hgrow="ALWAYS"/>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <Pane VBox.vgrow="ALWAYS"/>
         </VBox>
      </StackPane>
   </center>
</BorderPane>
