<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../Style/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Wargames.controller.UpdateArmyController">
   <center>
      <AnchorPane>
         <children>
            <VBox alignment="CENTER" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
               <children>
                  <HBox alignment="TOP_CENTER">
                     <children>
                        <Label fx:id="updateTitle" styleClass="title" text="Update / Upload Army">
                           <font>
                              <Font size="40.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <AnchorPane HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="saveArmyToFileBtn" layoutX="65.0" layoutY="1.0" mnemonicParsing="false" onAction="#saveArmyToFileBtnClicked" styleClass="size15" text="Save Army To File" AnchorPane.rightAnchor="0.0" />
                           </children>
                        </AnchorPane>
                        <AnchorPane HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="uploadArmyFromFileBtn" layoutY="1.0" mnemonicParsing="false" onAction="#uploadArmyFromFileBtnClicked" styleClass="size15" text="Upload Army From File" AnchorPane.leftAnchor="0.0" />
                           </children>
                        </AnchorPane>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER">
                     <children>
                        <Label fx:id="fileUploadedFromText" styleClass="size12" text="File Uploaded from" />
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label alignment="CENTER" styleClass="size20" text="Army Name :" />
                        <TextField fx:id="nameInput" alignment="CENTER" styleClass="size15" />
                     </children>
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Label styleClass="size20" text="Add Units" />
                     </children>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" spacing="15.0" styleClass="size15">
                     <children>
                        <ComboBox fx:id="typeComboBox" prefWidth="180.0" promptText="Unit Type" />
                        <TextField fx:id="inputUnitName" prefWidth="140.0" promptText="Unit Name" />
                        <TextField fx:id="inputHealth" prefWidth="100.0" promptText="Unit Health" />
                        <TextField fx:id="inputAmount" prefWidth="100.0" promptText="Amount" />
                        <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addBtnClicked" prefWidth="100.0" text="Add" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <TableView fx:id="armyTableView" minHeight="250.0" prefHeight="45.0" prefWidth="519.0" styleClass="table">
                          <columns>
                            <TableColumn fx:id="typeCol" prefWidth="75.0" styleClass="table" text="Type" />
                            <TableColumn fx:id="nameCol" prefWidth="75.0" styleClass="table" text="Name" />
                              <TableColumn fx:id="healthCol" prefWidth="174.00002034505212" styleClass="table" text="Health" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <AnchorPane prefHeight="25.0" prefWidth="622.0">
                           <children>
                              <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backBtnClicked" styleClass="size15" text="Back" />
                              <Button fx:id="confirmArmyBtn" layoutX="255.0" mnemonicParsing="false" onAction="#confirmArmyBtnClicked" styleClass="size15" text="Confirm Army" />
                           </children>
                        </AnchorPane>
                     </children>
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
   <top>
      <Pane prefHeight="20.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Pane prefHeight="200.0" prefWidth="10.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="200.0" prefWidth="10.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Pane BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
