<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Wargames.controller.UpdateArmyController">
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <children>
                  <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="updateTitle" text="Update / Upload Army">
                           <font>
                              <Font size="40.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="saveArmyToFileBtn" mnemonicParsing="false" onAction="#saveArmyToFileBtnClicked" text="Save Army To File" />
                        <Button fx:id="uploadArmyFromFileBtn" mnemonicParsing="false" onAction="#uploadArmyFromFileBtnClicked" text="Upload Army From File" />
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="fileUploadedFromText" text="File Uploaded from" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <AnchorPane prefHeight="27.0" prefWidth="245.0">
                           <children>
                              <TextField fx:id="nameInput" layoutX="95.0" layoutY="2.0" />
                              <Label layoutY="6.0" text="Army Name :" />
                           </children>
                        </AnchorPane>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Add Units" />
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="27.0" prefWidth="559.0">
                     <children>
                        <AnchorPane prefHeight="27.0" prefWidth="558.0">
                           <children>
                              <ComboBox fx:id="typeComboBox" prefWidth="150.0" promptText="Unit Type" />
                              <TextField fx:id="inputAmount" layoutX="407.0" layoutY="2.0" prefHeight="25.0" prefWidth="73.0" promptText="Amount" />
                              <TextField fx:id="inputHealth" layoutX="313.0" layoutY="2.0" prefHeight="25.0" prefWidth="83.0" promptText="Unit Health" />
                              <TextField fx:id="inputUnitName" layoutX="156.0" layoutY="1.0" promptText="Unit Name" />
                              <Button fx:id="addBtn" layoutX="491.0" layoutY="1.0" mnemonicParsing="false" onAction="#addBtnClicked" prefHeight="25.0" prefWidth="68.0" text="Add" />
                           </children>
                        </AnchorPane>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="armyTableView" minHeight="250.0" prefHeight="45.0" prefWidth="519.0">
                          <columns>
                            <TableColumn fx:id="typeCol" prefWidth="75.0" text="Type" />
                            <TableColumn fx:id="nameCol" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="healthCol" prefWidth="174.00002034505212" text="Health" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <AnchorPane prefHeight="25.0" prefWidth="622.0">
                           <children>
                              <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backBtnClicked" text="Back" />
                              <Button fx:id="confirmArmyBtn" layoutX="255.0" mnemonicParsing="false" onAction="#confirmArmyBtnClicked" text="Confirm Army" />
                           </children>
                        </AnchorPane>
                     </children>
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
   <top>
      <Pane prefHeight="20.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
