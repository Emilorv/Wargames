<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" styleClass="background" stylesheets="@../Style/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Wargames.controller.battleController">
   <top>
      <Pane maxHeight="100.0" minHeight="23.0" minWidth="100.0" prefHeight="23.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <StackPane fx:id="background" alignment="BOTTOM_CENTER" minHeight="200.0" minWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <HBox alignment="CENTER" prefHeight="45.0" prefWidth="550.0">
                     <children>
                        <Label fx:id="title" styleClass="title" stylesheets="@../Style/style.css" text="Wargames">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <HBox alignment="TOP_CENTER" styleClass="size20">
                                 <children>
                                    <Label fx:id="armyName1" text="Label" />
                                 </children>
                              </HBox>
                              <TableView fx:id="tableView1" styleClass="table">
                                 <columns>
                                    <TableColumn fx:id="typeCol1" editable="false" prefWidth="75.0" sortable="false" styleClass="table" text="Type" />
                                    <TableColumn fx:id="nameCol1" editable="false" prefWidth="75.0" sortable="false" styleClass="table" text="Name" />
                                    <TableColumn fx:id="healthCol1" editable="false" prefWidth="75.0" sortable="false" styleClass="table" text="Health" />
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                              <StackPane fx:id="units1" maxHeight="150.0" maxWidth="200.0" minHeight="150.0" minWidth="200.0" prefHeight="150.0" prefWidth="200.0">
                                 <children>
                                    <ImageView pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/Units/InfantryUnit.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="50.0" />
                                 </VBox.margin></StackPane>
                           </children>
                           <HBox.margin>
                              <Insets left="100.0" />
                           </HBox.margin>
                        </VBox>
                        <VBox alignment="TOP_CENTER" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="startBattleBtn" mnemonicParsing="false" onAction="#startBattleBtnClicked" styleClass="size15" text="Start Battle" />
                              <VBox alignment="CENTER" spacing="20.0" styleClass="size15">
                                 <children>
                                    <Label fx:id="battleStatus" text="Army attacks" />
                                    <Label fx:id="attackInfo" text="Attack Information" />
                                    <Label fx:id="damageDealtText" text="Damage dealt" />
                                 </children>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </VBox>
                              <Button fx:id="battleSpeedBtn" mnemonicParsing="false" onMouseClicked="#battleSpeedBtnHold" styleClass="size15" text="Normal Speed">
                                 <VBox.margin>
                                    <Insets top="100.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                           <children>
                              <HBox alignment="TOP_CENTER" styleClass="size20">
                                 <children>
                                    <Label fx:id="armyName2" text="Label" />
                                 </children>
                              </HBox>
                              <TableView fx:id="tableView2" styleClass="table" VBox.vgrow="ALWAYS">
                                <columns>
                                  <TableColumn fx:id="typeCol2" editable="false" prefWidth="75.0" sortable="false" styleClass="table" text="Type" />
                                  <TableColumn fx:id="nameCol2" editable="false" prefWidth="75.0" sortable="false" styleClass="table" text="Name" />
                                    <TableColumn fx:id="healthCol2" editable="false" prefWidth="75.0" sortable="false" styleClass="table" text="Health" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                              <StackPane fx:id="units2" maxHeight="150.0" maxWidth="200.0" minHeight="150.0" minWidth="200.0" prefHeight="150.0" prefWidth="200.0">
                                 <children>
                                    <ImageView nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/Units/RangedUnit.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="50.0" />
                                 </VBox.margin></StackPane>
                           </children>
                           <HBox.margin>
                              <Insets right="100.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
